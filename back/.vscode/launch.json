    "version": "0.2.0",
    "configurations": [ 
        {
            "name": "Bon Courage",
            "command": "npm run start:dev",
            "request": "launch",
            "type": "node-terminal",
        },
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "Debug Typescript",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}\\src\\main.ts",
            "runtimeArgs": ["-r" ,"ts-node/register" , "-r", "tsconfig-paths/register"],
            "console": "integratedTerminal"
        }
    ]
}